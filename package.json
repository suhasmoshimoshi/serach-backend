{
  "name": "book-search-application",
  "version": "1.0.0",
  "description": "An autocomplete book search application with React frontend and Node.js backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "cd client && npm test",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": [
    "react",
    "node",
    "express",
    "autocomplete",
    "search"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "nodemon": "^2.0.7"
  }
}